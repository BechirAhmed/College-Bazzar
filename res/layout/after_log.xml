

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/download"
        
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" >

            <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:text="Search" >

        <requestFocus />
    </AutoCompleteTextView>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/autoCompleteTextView1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_below="@+id/progressBar1"
        android:layout_marginTop="32dp"
        android:background="@drawable/book_shape"
        android:text="" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/electronics"
        android:text="" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_below="@+id/button3"
        android:layout_marginTop="34dp"
        android:background="@drawable/stationary"
        android:text="" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/Button05"
        android:layout_alignBottom="@+id/Button05"
        android:layout_alignLeft="@+id/Button02"
        android:background="@drawable/vehicles"
        android:text="" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/Button04"
        android:layout_alignBottom="@+id/Button04"
        android:layout_alignLeft="@+id/Button01"
        android:background="@drawable/othors"
        android:text="" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        
        android:layout_below="@+id/button2" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/progressBar1"
        android:layout_toLeftOf="@+id/autoCompleteTextView1"
        android:src="@drawable/search_logo" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Button05"
        android:layout_alignRight="@+id/progressBar1"
        android:background="@drawable/notes" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/progressBar2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/textView1"
        android:background="@drawable/button_shape"
        android:text="Location"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/progressBar2"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/Button02"
        android:background="@drawable/button_shape"
        android:text="SELL" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/Button04"
        android:layout_alignTop="@+id/textView2"
        android:paddingTop="10dp"
        android:text="About"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/THEME" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView1"
        android:autoLink="all"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:text="Contact us"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/THEME"
        android:typeface="sans" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:autoLink="all"
        android:capitalize="words"
        android:freezesText="true"
        android:overScrollMode="always"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Copyright(c):  GDP Productions"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/THEME" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Button05"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/autoCompleteTextView1"
        android:paddingTop="10dp"
        android:text="Help"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@drawable/THEME" />

        </RelativeLayout>
    </ScrollView>
   
